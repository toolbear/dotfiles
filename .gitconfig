[user]
  name = Tim Taylor
  email = tim@tool-man.org

[core]
  autocrlf = input
  safecrlf = true

[alias]
  co = checkout
  wc = whatchanged
  ci = commit
  st = status
  hist = log --pretty=format:\"%C(yellow)%h%Creset %ad | %s%d [%an]\" --graph --date=short

[color]
  ui = auto

[merge]
  keepBackup = false
  tool = p4merge

[push]
  default = current

[branch]
  autosetuprebase = remote

[diff]
  noprefix = true
