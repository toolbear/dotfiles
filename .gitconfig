[user]
    name = Tim Taylor
    email = tim@tool-man.org

[core]
    autocrlf = input
    safecrlf = true

[alias]
    co = checkout
    wc = whatchanged
    ci = commit
    st = status
    hist = log --pretty=format:\"%C(yellow)%h%Creset %ad | %s%d [%an]\" --graph --date=short
    type = cat-file -t
    dump = cat-file -p

[color]
    ui = auto

[merge]
    keepBackup = false;
    tool = p4merge
[mergetool "p4merge"]
    #cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge "$PWD/$BASE" "$PWD/$REMOTE" "$PWD/$LOCAL" "$PWD/$MERGED"
    cmd = p4merge "$BASE" "$REMOTE" "$LOCAL" "$MERGED"
    keepTemporaries = false
    trustExitCode = false
    keepBackup = false
